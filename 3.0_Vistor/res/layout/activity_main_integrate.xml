<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="img"
                android:src="@drawable/img_xg_logo" />

            <TextView
                android:id="@+id/main_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="欢迎使用小能科技产品 !"
                android:textColor="#121212"
                android:textSize="14dp"
                tools:ignore="UnusedIds" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="186dp"
            android:gravity="center"
            android:layout_below="@id/title"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/btn_native"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="17dp"
                android:drawableTop="@drawable/xn_wel_int"
                android:text="原生集成"
                android:textColor="#121212"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btn_h5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:drawablePadding="17dp"
                android:drawableTop="@drawable/xn_wel_demo"
                android:text="H5集成"
                android:visibility="gone"
                android:textColor="#121212"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/btn_robot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:drawablePadding="17dp"
                android:drawableTop="@drawable/xn_wel_demo"
                android:text="机器人测试"
                android:visibility="visible"
                android:textColor="#121212"
                android:textSize="16dp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_sdkversion"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:gravity="center"
            android:text="@string/sdk_version"
            android:textColor="#000" />
    </RelativeLayout>

</RelativeLayout>