<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    >
  <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/update_bg_shape">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="54dp"
        android:gravity="center"
        android:text="发现新版本"
        android:textStyle="bold"
        android:textColor="#333333"
        android:textSize="16sp" />



      <TextView
          android:id="@+id/tv_contents"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content"
          android:layout_below="@+id/tv_title"
          android:padding="22dp"
          android:text="22222222222222dddddddddddddddddddddddddddddddddddddddddddddd222222"
          android:textColor="#999999"
          android:textSize="12sp" />
      <View
          android:id="@+id/view2"
          android:layout_width="fill_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/tv_contents"
          android:background="#000000"
          android:orientation="horizontal" />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2">

        <TextView
            android:id="@+id/tv_toconfirm"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="以后再说"
            android:textColor="#333333"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_tocancel"
            android:layout_width="fill_parent"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:text="立即更新"
            android:background="@drawable/update_shape"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/toasticon" />

</RelativeLayout>


