<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/xn_function_bg"
    android:descendantFocusability="blocksDescendants"
     >

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="72dp"
        android:layout_height="74dp"
        android:focusable="false"
        android:layout_margin="6dp"
        android:layout_marginStart="12dp"
        android:scaleType="fitXY"
        android:contentDescription="img"
        android:background="@drawable/computer2" />

    <!--
         <TextView
        android:id="@+id/tv_send"
        android:layout_width="50dp"
        android:layout_height="26dp"
        android:layout_alignBottom="@+id/tv_orderprice"
        android:layout_alignParentRight="true"
        android:background="@drawable/send_btn"
        android:gravity="center"
        android:text="发送"
        android:textSize="12sp"
        android:textColor="@color/xn_black" />
    -->

    <RelativeLayout
        android:id="@+id/rl_des"
        android:layout_width="70dp"
        android:layout_marginTop="6dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/iv_icon"
         >

        <TextView
            android:id="@+id/tv_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="订单号:"
            android:layout_margin="3dp"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_tim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_num"
            android:text="订单时间:"
            android:layout_margin="3dp"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/tv_tim"
            android:text="订单价格:"
            android:layout_marginEnd="3dp"
            android:textColor="#999999"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/tv_tim"
            android:layout_below="@id/tv_id"
            android:text="订单商品数:"
            android:textColor="#999999"
            android:textSize="12sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:id="@+id/rl_data"
        android:layout_toEndOf="@id/rl_des"
        >

        <TextView
            android:id="@+id/tv_orderid"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:text="111"
            android:layout_margin="3dp"
            android:textColor="@color/xn_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ordernum"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_orderid"
            android:layout_marginStart ="3dp"
            android:text="9"
            
            android:textColor="@color/xn_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_ordertime"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordernum"
            android:layout_marginStart="6dp"
            android:text="11:11"
            android:layout_margin="3dp"
            android:textColor="@color/xn_black"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/tv_orderprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_ordertime"
            android:layout_marginStart="3dp"
            android:contentDescription="img"
            android:text="100"
            android:textColor="@color/xn_black"
            android:textSize="12sp" />
    </RelativeLayout>

    <ImageView 
        android:layout_width="0.8dp"
        android:layout_height="fill_parent"
        android:background="#ccc"
        android:layout_marginEnd ="20dp"
        android:layout_toStartOf="@id/tv_send"
        android:layout_alignBottom="@id/iv_icon"
        android:layout_alignTop="@id/iv_icon"
        />

    <TextView
        android:id="@+id/tv_send"
        android:layout_width="56dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/rl_data"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/nt_btn_background"
        android:text="发送"
        android:gravity="center"
        android:textColor="@color/xn_white"
        android:textSize="12sp" />

</RelativeLayout>